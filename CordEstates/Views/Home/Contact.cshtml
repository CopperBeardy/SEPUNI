@model CordEstates.Models.DTOs.CreateTicketDTO

@{
    ViewData["Title"] = "Contact";
}




  
        <!--Section heading-->
        <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
        <!--Section description-->
        <p class="text-center">
            Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
            a matter of hours to help you.
        </p>
 
 

        <form asp-controller="Home" asp-action="Contact" method="post">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <!--Grid column-->
               
                 <div class="form-group col-md-6">
                        <label asp-for="@Model.LastName"></label>
                        <input asp-for="@Model.LastName" class="form-control" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                 </div>
               
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="@Model.Message"></label>
                <textarea asp-for="@Model.Message" rows="5" cols="40" class="form-control"></textarea>
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Send</button>


        </form>

     
     
     
       
     

 


