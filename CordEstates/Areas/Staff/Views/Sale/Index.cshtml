@model IEnumerable<SaleManagementDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgreedPrice)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.SoldProperty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         
            <td>
                @Html.DisplayFor(modelItem => item.Buyer.FirstLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgreedPrice)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.SoldProperty.FirstLine)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (User.IsInRole("Admin")) { 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          }

            </td>
        </tr>
}
    </tbody>
</table>
