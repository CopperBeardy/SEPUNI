@model List<AppointmentDTO>
@{
    ViewData["Title"] = "Main Dashboard";
}

    <style>
        .squarebutton {
            height: 150px;
            width: 150px;
            margin: 5px;
            justify-content: center
        }
    </style>

<div class="row mt=3">
    <div class="col-lg-6 mt-lg-4">
        <h3>Your Appointements</h3>
        @*Current Logged in user appointsment*@

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Time</th>
                <th scope="col">Address</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr >
                    <td>@item.Time</td>
                    <td>@item.Listing.ToString()</td>
                </tr>      
                }
        </tbody>
    </table>
    </div>
    
    <div class=" col-lg-5 mt-lg-4 ml-md-3">

        <h3>Management</h3>
        @*Section Links*@
        @*Section Links*@
        <div>
            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Event" asp-action="Index">Events</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Appointment" asp-action="Index">
                Appointments
            </button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Listing" asp-action="Index">
                Listings
            </button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Service" asp-action="Index"> Services</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Address" asp-action="Index">Address</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Ticket" asp-action="Index">Ticket</button>

            


        </div>



    </div>

</div>