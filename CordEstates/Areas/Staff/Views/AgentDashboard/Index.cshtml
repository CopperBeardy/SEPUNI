@model List<AppointmentDTO>
@{
    ViewData["Title"] = "Main Dashboard";
}

    <style>
        .squarebutton {
            height: 150px;
            width: 150px;
            margin: 5px;
            font-size: large;
            font-weight: bold;
        }
    </style>

<div class="row mt=3">
    <div class="col-lg-6 mt-lg-4">
        <h3 class="mt-3">Your Appointements</h3>
        @*Current Logged in user appointsment*@

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Time</th>
                <th scope="col">Address</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr >
                    <td>@item.Time</td>
                    <td>@item.Listing.ToString()</td>
                </tr>      
                }
        </tbody>
    </table>
    </div>
    
    <div class=" col-lg-5 mt-lg-4 ml-md-3">

        <h3>Management</h3>
        @*Section Links*@

        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Address" asp-action="Index">Address</a>
        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Appointment" asp-action="Index"> Appointments</a>       
        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Event" asp-action="Index">Events</a>
        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Listing" asp-action="Index">  Listings </a>
        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Sale" asp-action="Index">Sales</a>
        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Service" asp-action="Index"> Services</a>
        <a type="button" class="btn btn-outline-info squarebutton" asp-controller="Ticket" asp-action="Index">Tickets</a>

    </div>

</div>