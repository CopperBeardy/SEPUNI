

@{
    ViewData["Title"] = "Main Dashboard";
}
<style>
    .squarebutton {
        height: 150px;
        width: 150px;
        margin: 5px;
        justify-content: center
    }
</style>
<h1>Main Dashboard</h1>

<div class="row">
    @*summary of recent activities*@
    <div class=" col-lg-6">
        <h3>Recent Activities</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Activity</th>
                    <th scope="col">Summary</th>
                    <th scope="col">Link</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-active">
                    <th scope="row">Active</th>
                    <td>Column content</td>

                    @*construct a *@
                    <td>Column content</td>

                </tr>
            </tbody>
        </table>
    </div>
    @*appoinment and section link*@
    <div class=" col-lg-6">

        <h3 class="mt-3 mb-3 text-center">Data Management</h3>
        @*Section Links*@
        <div>
            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Event" asp-action="Index">Events</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Appointment" asp-action="Index">Appointments</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Listing" asp-action="Index">Listings</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Service" asp-action="Index"> Services</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Address" asp-action="Index">Address</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Ticket" asp-action="Index">Ticket</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Photo" asp-action="Index">Images</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="Role" asp-action="Index">Roles</button>

            <button type="button" class=" btn btn-lg btn-outline-info squarebutton" asp-controller="User" asp-action="Index">Users</button>

        </div>
      

    </div>   
 </div>
