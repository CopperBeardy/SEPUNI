@model IEnumerable<TicketManagementDTO>

@{
    ViewData["Title"] = "Ticket Management";
}

    <h1 class="mt-3">Ticket Management Dashboard</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
               Last Name
            </th>

            <th>
                Creation Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actioned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SentAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actioned)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>



